<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- text view for our course name -->

        <!-- text view for our course description -->
        <TextView
            android:id="@+id/idTVCourseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Course Name"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/idTVCourseDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/idTVCourseName"
            android:padding="5dp"
            android:text="Course Description"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/idTVRegulationString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Regulations"
            android:textColor="@color/black"
            android:layout_below="@id/idTVCourseDescription"/>

        <TextView
            android:id="@+id/idTVLicenseString"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="License"
            android:textColor="@color/black"
            android:layout_below="@id/idTVRegulationString"/>

        <TextView
            android:id="@+id/idTVGeneralData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="General Data"
            android:textColor="@color/black"
            android:layout_below="@id/idTVLicenseString"/>
        <TextView
            android:id="@+id/idTVAllowedInAgriculture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Allowed In Agriculture"
            android:textColor="@color/black"
            android:layout_below="@id/idTVGeneralData"/>
        <TextView
            android:id="@+id/idTVRestrictions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Restrictions"
            android:textColor="@color/black"
            android:layout_below="@id/idTVAllowedInAgriculture"/>
        <TextView
            android:id="@+id/idTVWarnings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Warnings"
            android:textColor="@color/black"
            android:layout_below="@id/idTVRestrictions"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>